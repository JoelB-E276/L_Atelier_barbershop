{% extends 'base.html.twig' %}

{% block title %}l'Atelier Barbershop Rouen{% endblock %}

{% block body %}

<section class="container-fluid service">
  <div class="row d-flex justify-content-around">
    <div class="col-10 col-lg-3 border border-primary">
      <h2>Coupe</h2>
       {% for service in services %}
         {% if service.type == "Coupe"%}
           <div>{{ service.title }}{{' '}}{{service.price }}{{ ' €'}}</div>
           <span>{{ service.text }}</span>  
         {% endif %} 
       {% endfor %}  
     </div>
   <div class="col-10 col-lg-3 border border-primary">
      <h2>Barbe</h2>
       {% for service in services %}
         {% if service.type == "Barbe"%}
           <div>{{ service.title }}{{' '}}{{service.price }}{{ ' €'}}</div>
           <span>{{ service.text }}</span>  
         {% endif %} 
       {% endfor %}  
     </div>
   <div class="col-10 col-lg-3 border border-primary">
      <h2>Coloration / Défrisage</h2>
       {% for service in services %}
         {% if service.type == "Coloration / Défrisage"%}
           <div>{{ service.title }}{{' '}}{{service.price }}{{ ' €'}}</div>
           <span>{{ service.text }}</span>  
         {% endif %} 
       {% endfor %}  
     </div>               
</section>
