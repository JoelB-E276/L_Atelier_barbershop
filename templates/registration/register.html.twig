<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
       
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            
        {% endblock %}
    </head>
    <body>
        {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
            {% block body %}
                
                <section class="container">
                    <div class="text-center">
                        <h1 class="my-5">Création de compte</h1>
                    </div>
                        
                    {{ form_start(registrationForm) }}
                        
                            {{ form_row(registrationForm.username) }}
                            <div class=" text-center mb-3">
                                <p>Votre mot de passe doit contenir au minimum:</p>
                                <span class="alert alert-danger" id="lowercase">1 minuscule</span>
                                <span class="alert alert-danger" id="uppercase">1 majuscule</span>
                                <span class="alert alert-danger" id="number">1 chiffre</span>
                                <span class="alert alert-danger" id="length">8 caratères</span>
                            </div>
                            {{ form_row(registrationForm.plainPassword) }}
                            <button class="btn btn-primary my-3" type="submit" id="button">Valider</button>

                    {{ form_end(registrationForm) }}
                </section>  
           
            {% endblock %}





    <script src="{{ asset('assets/js/password.js') }}"></script>



